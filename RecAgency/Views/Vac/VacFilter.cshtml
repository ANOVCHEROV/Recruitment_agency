@model RecAgency.Models.VacFilter

@{
    ViewBag.Title = "VacFilter";
}

<h2>Фильтр</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <div class="control-label col-md-2">
                @Html.Raw("Зарплата от ")
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Salary, new { htmlAttributes = new { @class = "form-control", data_val="false" } })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                @Html.Raw("Ключевые слова ")
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.KeyWords, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Отфильтровать" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад к списку вакасий", "List", "Vac")
</div>
<div>
    @Html.ActionLink("К стартовой странице", "Index", "Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
