@model RecAgency.Models.Vacancy
@using Microsoft.AspNet.Identity;

@{
    ViewBag.Title = "Details";
}

<h2>Детали</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Заголовок
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Область деятельности
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Field)
        </dd>

        <dt>
            Занятость
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Schedule)
        </dd>

        <dt>
            Опыт
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Experience)
        </dd>

        <dt>
            Адрес
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            Зарплата
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Salary)
        </dd>

        <dt>
            Дата последнего редактирования
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOfPublication)
        </dd>

        <dt>
            Информация
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Info)
        </dd>

        <dt>
            Название организации
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Organization)
        </dd>

    </dl>
</div>
<p>
    @if (User.Identity.GetUserId() == Model.IdOfAuthor)
    {
        @Html.ActionLink("Редактировать", "Edit", "Vac", new { id = Model.Id }, null)<br />
        @Html.ActionLink("Удалить", "Delete", "Vac", new { id = Model.Id }, null)
    }
    <div>
        @Html.ActionLink("Назад к списку вакасий", "List", "Vac")
    </div>
    <div>
        @Html.ActionLink("К стартовой странице", "Index", "Home")
    </div>
</p>
