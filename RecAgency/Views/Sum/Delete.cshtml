@model RecAgency.Models.Summary
@using Microsoft.AspNet.Identity;

@{
    ViewBag.Title = "Delete";
}

<h3>Вы уверены, что хотите удалить это?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
           ФИО
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FIO)
        </dd>

        <dt>
            Информация
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Info)
        </dd>

        <dt>
            Опыт
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Experience)
        </dd>

        <dt>
            Дата последнего редактирования
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DatePublication)
        </dd>

        <dt>
            Возраст
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Age)
        </dd>

        <dt>
            Пол
        </dt>

        <dd>
            @if (Model.Sex)
            {
                @Html.Raw("М");
            }
            else
            {
                @Html.Raw("Ж");
            }
        </dd>

        <dt>
            Основная профессия
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BaseProfession)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
        </div>
    }
    <div>
        @if (User.IsInRole("Aspirant"))
        {
            @Html.ActionLink("Мое резюме", "Details", "Sum", new { id = User.Identity.GetUserId() }, null)
        }
        @if (User.IsInRole("Employer"))
        {
            @Html.ActionLink("Посмотреть резюме", "List", "Sum")
        }
    </div>
    <div>
        @Html.ActionLink("К стартовой странице", "Index", "Home")
    </div>
</div>
