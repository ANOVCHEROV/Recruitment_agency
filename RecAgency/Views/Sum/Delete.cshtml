@model RecAgency.Models.Summary
@using Microsoft.AspNet.Identity;

@{
    ViewBag.Title = "Delete";
}

<h3>Вы уверены, что хотите удалить это?</h3>
<div>
    <h4>Summary</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.FIO)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FIO)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Info)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Info)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Experience)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Experience)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DatePublication)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DatePublication)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Age)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Age)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Sex)
        </dt>

        <dd>
            @if (Model.Sex)
            {
                @Html.Raw("М");
            }
            else
            {
                @Html.Raw("Ж");
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BaseProfession)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BaseProfession)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
        </div>
    }
    <div>
        @if (User.IsInRole("Aspirant"))
        {
            @Html.ActionLink("Мое резюме", "Details", "Sum", new { id = User.Identity.GetUserId() }, null)
        }
        @if (User.IsInRole("Employer"))
        {
            @Html.ActionLink("Посмотреть резюме", "List", "Sum")
        }
    </div>
    <div>
        @Html.ActionLink("К стартовой странице", "Index", "Home")
    </div>
</div>
